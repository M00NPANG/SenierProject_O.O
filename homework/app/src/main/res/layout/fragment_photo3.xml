<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoFragment1">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:fontFamily="@font/main_font"
        android:textColor="#FFC2AF"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:visibility="gone"/>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

    <!-- 퍼스널 컬러 색상표 -->
    <FrameLayout
        android:id="@+id/backgroundImageView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:src="@drawable/percol_autumn"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBottom"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.6">
        <ImageView
            android:id="@+id/backgroundImageView_1"
            android:src="@drawable/percol_autumn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- user 사진 -->
    <ImageView
        android:id="@+id/fragment_photo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/backgroundImageView"
        app:layout_constraintBottom_toBottomOf="@id/backgroundImageView"
        app:layout_constraintStart_toStartOf="@id/backgroundImageView"
        app:layout_constraintEnd_toEndOf="@id/backgroundImageView"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.55"/>

    <ImageView
        android:id="@+id/imageViewBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leaf"
        app:layout_constraintTop_toBottomOf="@id/backgroundImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/textViewSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가을 웜톤"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/main_font"
        android:textSize="28dp"
        app:layout_constraintStart_toEndOf="@id/imageViewBottom"
        app:layout_constraintTop_toTopOf="@id/imageViewBottom"
        app:layout_constraintBottom_toBottomOf="@id/imageViewBottom"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="피부 톤: 따뜻하고 약간 어두운 피부 톤으로, 올리브빛이나 황금빛이 도는 피부"
        android:textSize="22dp"
        android:textAlignment="center"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/imageViewBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="눈동자 색: 녹색, 호박색, 짙은 갈색"
        android:textSize="22dp"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| 가을 웜톤에 어울리는 색상 |"
        android:textSize="22dp"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="따뜻하고 깊은 색상: 테라코타, 올리브 그린, 모스 그린, 머스타드, 버건디, 브론즈"
        android:textSize="22dp"
        android:textAlignment="center"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중후한 느낌의 톤다운된 색상: 다크 오렌지, 카키, 브라운"
        android:textSize="22dp"
        android:textAlignment="center"
        android:fontFamily="@font/main_font"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/textViewBottomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:fontFamily="@font/main_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>