<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodyRecomen">

    <!-- 유저 얼굴 사진 -->
    <FrameLayout
        android:id="@+id/user_face"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 가운데 상단 사각형 -->
    <FrameLayout
        android:id="@+id/shirt_box"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/user_face"
        app:layout_constraintStart_toStartOf="@+id/user_face"
        app:layout_constraintEnd_toEndOf="@+id/user_face" />

    <!-- 가운데 중간 사각형 -->
    <FrameLayout
        android:id="@+id/pants_box"
        android:layout_width="200dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@id/shirt_box"
        app:layout_constraintStart_toStartOf="@id/shirt_box"
        app:layout_constraintEnd_toEndOf="@id/shirt_box" />

    <!-- 한벌옷 사각형 -->
    <FrameLayout
        android:id="@+id/onepiece_box"
        android:layout_width="180dp"
        android:layout_height="410dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 가운데 하단 사각형 -->
    <FrameLayout
        android:id="@+id/shoes_box"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/pants_box"
        app:layout_constraintStart_toStartOf="@id/pants_box"
        app:layout_constraintEnd_toEndOf="@id/pants_box"
        android:background="@drawable/black_border"/>

    <!-- 좌측 사각형 -->
    <FrameLayout
        android:id="@+id/etc_box"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/shoes_box"
        app:layout_constraintBottom_toBottomOf="@id/shoes_box"
        app:layout_constraintEnd_toStartOf="@id/shoes_box"
        android:layout_marginEnd="6dp"
        android:background="@drawable/black_border"/>

    <!-- 우측 사각형 -->
    <FrameLayout
        android:id="@+id/hat_box"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/shoes_box"
        app:layout_constraintBottom_toBottomOf="@id/shoes_box"
        app:layout_constraintStart_toEndOf="@id/shoes_box"
        android:layout_marginStart="6dp"
        android:background="@drawable/black_border" />

    <ImageView
        android:id="@+id/addCodiset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/download"
        app:layout_constraintTop_toBottomOf="@id/hat_box"
        app:layout_constraintStart_toEndOf="@id/shoes_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>

