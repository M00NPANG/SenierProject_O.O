<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp">

    <!-- 가운데 상단 사각형 -->
    <FrameLayout
        android:id="@+id/shirt_box"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/shirt_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- 가운데 중간 사각형 -->
    <FrameLayout
        android:id="@+id/pants_box"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/shirt_box"
        app:layout_constraintStart_toStartOf="@id/shirt_box"
        app:layout_constraintEnd_toEndOf="@id/shirt_box">
        <ImageView
            android:id="@+id/pants_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- 한벌옷 사각형 -->
    <FrameLayout
        android:id="@+id/onepiece_box"
        android:layout_width="80dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/onepiece_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- 가운데 하단 사각형 -->
    <FrameLayout
        android:id="@+id/shoes_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/pants_box"
        app:layout_constraintStart_toStartOf="@id/pants_box"
        app:layout_constraintEnd_toEndOf="@id/pants_box"
        android:background="@drawable/black_border">
        <ImageView
            android:id="@+id/shoes_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- 좌측 사각형 -->
    <FrameLayout
        android:id="@+id/etc_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/shoes_box"
        app:layout_constraintBottom_toBottomOf="@id/shoes_box"
        app:layout_constraintEnd_toStartOf="@id/shoes_box"
        android:layout_marginEnd="3dp"
        android:background="@drawable/black_border">
        <ImageView
            android:id="@+id/etc_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- 우측 사각형 -->
    <FrameLayout
        android:id="@+id/hat_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/shoes_box"
        app:layout_constraintBottom_toBottomOf="@id/shoes_box"
        app:layout_constraintStart_toEndOf="@id/shoes_box"
        android:layout_marginStart="3dp"
        android:background="@drawable/black_border">
        <ImageView
            android:id="@+id/hat_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>